    </a>
    <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <div class="navigation-tools">
        <ul id="navigation-menu">
          <% if current_user %>
            <li class="nav-link">
              <%= link_to "Log out", signout_path %>
            </li>
          <% else %>
            <li class="nav-link">
              <%= link_to "Sign in with Github", create_account_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
